<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="18dip"
      android:layout_marginBottom="15dip"
      android:gravity="center_horizontal"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:text="Status do Pedido"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="70dip"
        android:weightSum="1">

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dip"
          android:layout_marginRight="20dip"
          android:orientation="vertical"
          android:layout_marginBottom="8dip"
          android:layout_marginTop="8dip">

        <CheckBox
          android:id="@+id/checkBoxOrcamento"
          android:layout_marginLeft="8dip"
          android:layout_marginTop="8dip"
          android:scaleX="2.0"
          android:scaleY="2.0"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginRight="8dip" />

      </RelativeLayout>

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dip"
          android:layout_marginRight="20dip"
          android:layout_marginBottom="8dip"
          android:layout_marginTop="8dip">

        <CheckBox
         android:id="@+id/checkBoxFinalizado"
         android:layout_marginLeft="8dip"
         android:layout_marginTop="8dip"
         android:scaleX="2.0"
         android:scaleY="2.0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginRight="8dip" />

      </RelativeLayout>

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dip"
          android:layout_marginRight="20dip"
          android:layout_marginTop="8dip"
          android:layout_marginBottom="8dip">

        <CheckBox
         android:id="@+id/checkBoxSincronizado"
         android:layout_marginLeft="8dip"
         android:layout_marginTop="8dip"
         android:scaleX="2.0"
         android:scaleY="2.0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
            android:layout_marginRight="8dip"
            android:layout_marginBottom="8dip" />

      </RelativeLayout>

      <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dip"
    android:layout_marginRight="20dip"
          android:layout_marginTop="8dip"
          android:layout_marginBottom="8dip">

        <CheckBox
         android:id="@+id/checkBoxParcProcessado"
         android:layout_marginLeft="8dip"
         android:layout_marginTop="8dip"
         android:scaleX="2.0"
         android:scaleY="2.0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
            android:layout_marginRight="8dip"
            android:layout_marginBottom="8dip" />

      </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="15dip">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="         Orçamento             Finalizado        Sincronizado      Parcialmente"
          android:textSize="12dip"
          android:textAppearance="@style/TextAppearance.AppCompat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="20dip"
        android:gravity="center">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="                                                                                                   Processado"
          android:textSize="12dip"
          android:textAppearance="@style/TextAppearance.AppCompat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="70dip"
        android:layout_marginTop="15dip">

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dip"
          android:layout_marginRight="20dip"
          android:orientation="vertical"
          android:layout_marginBottom="8dip"
          android:layout_marginTop="8dip">

        <CheckBox
            android:id="@+id/checkBoxNaoProcessado"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginRight="8dip" />

      </RelativeLayout>

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dip"
          android:layout_marginRight="20dip"
          android:layout_marginBottom="8dip"
          android:layout_marginTop="8dip">

        <CheckBox
            android:id="@+id/checkBoxCancelado"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginRight="8dip" />

      </RelativeLayout>

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dip"
          android:layout_marginRight="20dip"
          android:layout_marginTop="8dip"
          android:layout_marginBottom="8dip">

        <CheckBox
            android:id="@+id/checkBoxParcFaturado"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dip"
            android:layout_marginBottom="8dip" />

      </RelativeLayout>

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dip"
          android:layout_marginRight="20dip"
          android:layout_marginTop="8dip"
          android:layout_marginBottom="8dip">

        <CheckBox
            android:id="@+id/checkBoxFaturado"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dip"
            android:layout_marginBottom="8dip" />
      </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="15dip">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="                Não                 Cancelado        Parcialmente          Faturado"
          android:textSize="12dip"
          android:textAppearance="@style/TextAppearance.AppCompat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="20dip"
        android:gravity="center">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="           Processado                                        Faturado                         "
          android:textSize="12dip"
          android:textAppearance="@style/TextAppearance.AppCompat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="70dip"
        android:layout_marginTop="15dip">

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dip"
          android:layout_marginRight="20dip"
          android:orientation="vertical"
          android:layout_marginBottom="8dip"
          android:layout_marginTop="8dip">

        <CheckBox
            android:id="@+id/checkBoxParcEntregue"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginRight="8dip" />

      </RelativeLayout>

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dip"
          android:layout_marginRight="20dip"
          android:layout_marginBottom="8dip"
          android:layout_marginTop="8dip">

        <CheckBox
            android:id="@+id/checkBoxEntregue"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="10dip" />

      </RelativeLayout>

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="20dip"
      android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="                                     Parcialmente          Entregue"
        android:textSize="12dip"
        android:textAppearance="@style/TextAppearance.AppCompat" />
  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="20dip"
        android:gravity="center">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="                                          Entregue"
          android:textSize="12dip"
          android:textAppearance="@style/TextAppearance.AppCompat" />
    </LinearLayout>

    <View
      android:layout_width="fill_parent"
      android:layout_height="3dp"
      android:background="#D6D7D7" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="18dip"
      android:layout_marginBottom="18dip"
      android:gravity="center_horizontal"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:text="Data de Emissão"/>

    <Spinner
       android:id="@+id/spinnerDataEmissao"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:layout_marginTop="3dp"
       android:focusableInTouchMode="true"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"
       android:layout_marginBottom = "18dip"/>

    <View
      android:layout_width="fill_parent"
      android:layout_height="3dp"
      android:layout_marginTop="10dip"
      android:background="#D6D7D7" />

    <Button
       android:id="@+id/btnFinalizar"
       android:layout_marginTop="20dip"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_width="wrap_content"
       android:drawableLeft="@mipmap/ic_delete"
       android:text="   Limpar Filtros"/>

  </LinearLayout>
</ScrollView>

