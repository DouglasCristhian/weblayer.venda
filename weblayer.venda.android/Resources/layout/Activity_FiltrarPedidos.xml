<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <include
      android:id="@+id/toolbar"
      layout="@layout/toolbar"/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="18dip"
      android:layout_marginBottom="15dip"
      android:gravity="center_horizontal"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:text="Status do Pedido"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dip"
          android:layout_marginRight="10dip"
          android:orientation="vertical">

        <CheckBox
          android:id="@+id/checkBoxOrcamento"
          android:layout_marginLeft="20dip"
          android:buttonTint="@color/Orcamento"
          android:layout_marginTop="3dip"
          android:scaleX="2.0"
          android:scaleY="2.0"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

        <TextView
           android:id="@+id/txtCheckBoxOrcamento"
           android:text="    Orçamento\n              "
           android:layout_marginTop="10dip"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/checkBoxOrcamento"
           android:textSize="10dip"/>

      </RelativeLayout>

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dip"
          android:layout_marginRight="10dip">

        <CheckBox
         android:id="@+id/checkBoxFinalizado"
         android:layout_marginLeft="20dip"
         android:layout_marginTop="3dip"
         android:buttonTint="@color/Finalizado"
         android:scaleX="2.0"
         android:scaleY="2.0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>

        <TextView
        android:id="@+id/txtCheckBoxFinalizado"
        android:text="     Finalizado\n"
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxFinalizado"
        android:textSize="10dip"/>

      </RelativeLayout>

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dip"
          android:layout_marginRight="10dip">

        <CheckBox
         android:id="@+id/checkBoxSincronizado"
         android:layout_marginLeft="20dip"
         android:layout_marginTop="3dip"
         android:buttonTint="@color/Sincronizado"
         android:scaleX="2.0"
         android:scaleY="2.0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>

        <TextView
        android:id="@+id/txtCheckBoxSincronizado"
        android:text="  Sincronizado\n        "
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxSincronizado"
        android:textSize="10dip"/>

      </RelativeLayout>

      <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip">

        <CheckBox
         android:id="@+id/checkBoxParcProcessado"
         android:layout_marginLeft="20dip"
         android:layout_marginTop="3dip"
         android:buttonTint="@color/ParcProcessado"
         android:scaleX="2.0"
         android:scaleY="2.0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>

        <TextView
        android:id="@+id/txtCheckBoxParcProcessado"
        android:text="  Parcialmente\n    Processado"
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxParcProcessado"
        android:textSize="10dip"/>

      </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dip"
          android:layout_marginRight="10dip"
          android:orientation="vertical">

        <CheckBox
          android:id="@+id/checkBoxNaoProcessado"
          android:layout_marginLeft="20dip"
          android:buttonTint="@color/NaoProcessado"
          android:layout_marginTop="3dip"
          android:scaleX="2.0"
          android:scaleY="2.0"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

        <TextView
           android:id="@+id/txtCheckBoxNaoProcessado"
           android:text="         Não\n Processado"
           android:layout_marginTop="10dip"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/checkBoxNaoProcessado"
           android:textSize="10dip"/>

      </RelativeLayout>

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dip"
          android:layout_marginRight="10dip">

        <CheckBox
         android:id="@+id/checkBoxCancelado"
         android:layout_marginLeft="20dip"
         android:layout_marginTop="3dip"
         android:buttonTint="@color/Cancelado"
         android:scaleX="2.0"
         android:scaleY="2.0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>

        <TextView
        android:id="@+id/txtCheckBoxCancelado"
        android:text="    Cancelado\n"
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxCancelado"
        android:textSize="10dip"/>

      </RelativeLayout>

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dip"
          android:layout_marginRight="10dip">

        <CheckBox
         android:id="@+id/checkBoxParcFaturado"
         android:layout_marginLeft="20dip"
         android:layout_marginTop="3dip"
         android:buttonTint="@color/ParcFaturado"
         android:scaleX="2.0"
         android:scaleY="2.0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>

        <TextView
        android:id="@+id/txtCheckBoxParcFaturado"
        android:text="  Parcialmente\n      Faturado"
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxParcFaturado"
        android:textSize="10dip"/>

      </RelativeLayout>

      <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip">

        <CheckBox
         android:id="@+id/checkBoxFaturado"
         android:layout_marginLeft="20dip"
         android:layout_marginTop="3dip"
         android:buttonTint="@color/ParcFaturado"
         android:scaleX="2.0"
         android:scaleY="2.0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>

        <TextView
        android:id="@+id/txtCheckBoxFaturado"
        android:text="      Faturado\n          "
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxFaturado"
        android:textSize="10dip"/>

      </RelativeLayout>

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:gravity="center"
      android:orientation="horizontal">

      <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dip"
       android:layout_marginRight="10dip">

        
        <CheckBox
         android:id="@+id/checkBoxParcEntregue"
         android:layout_marginLeft="18dip"
         android:layout_marginTop="3dip"
         android:buttonTint="@color/ParcEntregue"
         android:scaleX="2.0"
         android:scaleY="2.0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>

        <TextView
        android:id="@+id/txtCheckBoxParcEntregue"
        android:text="  Parcialmente\n      Entregue"
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxParcEntregue"
        android:textSize="10dip"/>

      </RelativeLayout>

      <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dip"
       android:layout_marginRight="10dip">

        <CheckBox
         android:id="@+id/checkBoxEntregue"
         android:layout_marginLeft="20dip"
         android:layout_marginTop="3dip"
         android:buttonTint="@color/Entregue"
         android:scaleX="2.0"
         android:scaleY="2.0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>

        <TextView
        android:id="@+id/txtCheckBoxEntregue"
        android:text="       Entregue\n        "
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/checkBoxEntregue"
        android:textSize="10dip"/>

      </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dip"
        android:background="#D6D7D7" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="18dip"
      android:layout_marginBottom="18dip"
      android:gravity="center_horizontal"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:text="Data de Emissão"/>

    <Spinner
       android:id="@+id/spinnerDataEmissao"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:layout_marginTop="3dp"
       android:focusableInTouchMode="true"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"
       android:layout_marginBottom = "18dip"/>

    <View
      android:layout_width="fill_parent"
      android:layout_height="3dp"
      android:layout_marginTop="10dip"
      android:background="#D6D7D7" />

    <Button
       android:id="@+id/btnFinalizar"
       android:layout_marginTop="20dip"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_width="wrap_content"
       android:drawableLeft="@mipmap/ic_delete"
       android:text="   Limpar Filtros"/>

  </LinearLayout>
</ScrollView>
