<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:minWidth="400dp"
    android:minHeight="500dp">

    <include
    android:id="@+id/toolbar"
    layout="@layout/toolbar"/>

    <!--Sttus do pedido-->
    <TextView
       android:id="@+id/lblStatusPedido"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:textSize="18sp"
       android:layout_marginTop="10dp"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"
       android:text="Status do Pedido:"/>
    
    <EditText
       android:id="@+id/txtStatusPedido"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:layout_marginTop="3dp"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"
       android:focusable="false"
       android:editable="false"/>
    
    <!--Cliente-->
    <TextView
       android:id="@+id/lblIdCliente"
       android:layout_marginTop="10dp"
       android:layout_marginLeft = "18dip"
       android:textSize="18sp"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:text="Cliente"/>

    <Spinner
       android:id="@+id/spinnerIdCliente"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:layout_marginTop="3dp"
       android:focusableInTouchMode="true"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"/>

    <TextView
       android:id="@+id/lblIdVendedor"
       android:layout_marginTop="10dp"
       android:layout_marginLeft = "18dip"
       android:textSize="18sp"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:text="Vendedor"/>

    <EditText
       android:id="@+id/txtIdvendedor"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:layout_marginTop="3dp"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"/>

    <TextView
       android:id="@+id/lblValorTotal"
       android:layout_marginTop="10dp"
       android:layout_marginLeft = "18dip"
       android:textSize="18sp"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:text="Valor total"/>

    <EditText
       android:id="@+id/txtValorTotal"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:layout_marginTop="3dp"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"
       android:editable="false"
       android:clickable="true"
       android:gravity="right"
       android:text="0"/>

    <TextView
       android:id="@+id/lblDataEmissao"
       android:layout_marginTop="10dp"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"
       android:textSize="18sp"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:text="Data de Emissão"/>

    <EditText
       android:id="@+id/txtDataEmissao"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:focusableInTouchMode="true"
       android:layout_marginTop="3dp"
       android:editable="false"
       android:clickable="true"/>

    <TextView
       android:id="@+id/lblMsgPedido"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:textSize="18sp"
       android:layout_marginTop="10dp"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"
       android:text="Mensagem Pedido:"/>

    <EditText
       android:id="@+id/txtMsgPedido"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:layout_marginTop="3dp"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"/>

    <TextView
       android:id="@+id/lblMsgNF"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:textSize="18sp"
       android:layout_marginTop="10dp"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"
       android:text="Mensagem NF:"/>

    <EditText
       android:id="@+id/txtMsgNF"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:layout_marginTop="3dp"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"/>

    <!--<TextView
       android:id="@+id/lblObservacao"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:textSize="18sp"
       android:layout_marginTop="10dp"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"
       android:text="Observacões:"/>

    <EditText
       android:id="@+id/txtObservacao"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:layout_marginTop="3dp"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"/>-->

    <TextView
       android:id="@+id/lblCodigoPedido"
       android:layout_marginTop="15dip"
       android:layout_marginLeft = "18dip"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:layout_alignParentTop ="true"
       android:textSize="18sp"
       android:text="Código do pedido no cliente"/>


    <EditText
       android:id="@+id/txtCodigoPedido"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:layout_marginTop="3dp"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"
       android:layout_marginBottom="3dp"/>  
    

    <Button
       android:id="@+id/btnItensPedido"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:text="Itens do Pedido"
       android:layout_marginTop="10dp"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"/>

    <Button
       android:id="@+id/btnAdicionar"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:text="Adicionar Item"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"/>
    
    <Button
       android:id="@+id/btnFinalizar"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:text="Finalizar"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"
       android:layout_marginBottom="18dip"/>

  </LinearLayout>
</ScrollView>
