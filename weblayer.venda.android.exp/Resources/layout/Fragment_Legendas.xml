<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="400dp"
    android:minHeight="150dp">

  <TextView
    android:id="@+id/txtTitulo"
    android:text="Status do Pedido:"
    android:layout_marginTop="10dip"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dip"/>

  <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dip"
        android:background="#D6D7D7" />

  <LinearLayout
      android:layout_marginTop="10dip"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal">
    <ImageView
        android:id="@+id/img2"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/BolaCinza" />
    <TextView
        android:id="@+id/txtLegenda2"
        android:text="  Orçamento"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />
  </LinearLayout>
  <LinearLayout
      android:layout_marginTop="10dip"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal">
    <ImageView
        android:id="@+id/img2"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/BolaCinzaEscura" />
    <TextView
        android:id="@+id/txtLegenda2"
        android:text="  Pedido Finalizado"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />
  </LinearLayout>
  
  <LinearLayout
      android:layout_marginTop="10dip"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal">
    <ImageView
        android:id="@+id/img3"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/BolaAzul" />
    <TextView
        android:id="@+id/txtLegenda3"
        android:text="  Sincronizado/Em Processamento"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />
  </LinearLayout>
  
  <LinearLayout
      android:layout_marginTop="10dip"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal">
    <ImageView
        android:id="@+id/img4"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/BolaRoxo" />
    <TextView
        android:id="@+id/txtLegenda4"
        android:text="  Parcialmente Processado"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />
  </LinearLayout>
  
  <LinearLayout
    android:layout_marginTop="10dip"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
    <ImageView
        android:id="@+id/img4"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/BolaVermelhaParcial" />
    <TextView
        android:id="@+id/txtLegenda4"
        android:text="  Não Processado/Recusado"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />
  </LinearLayout>
  
  <LinearLayout
    android:layout_marginTop="10dip"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
    <ImageView
        android:id="@+id/img4"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/BolaVermelha" />
    <TextView
        android:id="@+id/txtLegenda4"
        android:text="  Cancelado"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />
  </LinearLayout>
    <LinearLayout
    android:layout_marginTop="10dip"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
    <ImageView
        android:id="@+id/img4"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/BolaAmarelaParcial" />
    <TextView
        android:id="@+id/txtLegenda4"
        android:text="  Parcialmente Faturado"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />
  </LinearLayout>
    <LinearLayout
    android:layout_marginTop="10dip"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
    <ImageView
        android:id="@+id/img4"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/BolaAmarela" />
    <TextView
        android:id="@+id/txtLegenda4"
        android:text="  Faturado"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />
  </LinearLayout>
      <LinearLayout
    android:layout_marginTop="10dip"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
    <ImageView
        android:id="@+id/img4"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/BolaVerdeParcial" />
    <TextView
        android:id="@+id/txtLegenda4"
        android:text="  Parcialmente Entregue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />
  </LinearLayout>
  <LinearLayout
    android:layout_marginTop="10dip"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
    <ImageView
        android:id="@+id/img4"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/BolaVerde" />
    <TextView
        android:id="@+id/txtLegenda4"
        android:text="  Entregue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />
  </LinearLayout>
    
  <Button
        android:id="@+id/btnEntendi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dip"
        android:text="Ok" />
</LinearLayout>