<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="400dp"
    android:minHeight="500dp">

    <include
      android:id="@+id/toolbar"
      layout="@layout/toolbar"/>

    <TextView
      android:id="@+id/lblCodigoTabelaPreco"
      android:layout_marginTop="30dip"
      android:layout_marginLeft = "18dip"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Código"/>

    <EditText
      android:id="@+id/txtCodigoTabelaPreco"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="18dip"
      android:layout_marginRight="18dip"/>

    <TextView
      android:id="@+id/lblDescricaoTabelaPreco"
      android:layout_marginTop="10dp"
      android:layout_marginLeft = "18dip"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Descrição"/>

    <EditText
      android:id="@+id/txtDescricaoTabelaPreco"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="18dip"
      android:layout_marginRight="18dip"/>

    <TextView
      android:id="@+id/lblValorTabelaPreco"
      android:layout_marginTop="10dp"
      android:layout_marginLeft = "18dip"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Valor"/>

    <EditText
      android:id="@+id/txtValorTabelaPreco"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="18dip"
      android:layout_marginRight="18dip"
      android:inputType="number"
      android:gravity="right"/>

    <TextView
      android:id="@+id/lblDescontoMaxTabelaPreco"
      android:layout_marginTop="10dp"
      android:layout_marginLeft = "18dip"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Desconto Maximo"/>

    <EditText
      android:id="@+id/txtDescontoMaxTabelaPreco"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="18dip"
      android:layout_marginRight="18dip"
      android:inputType="number"
      android:gravity="right"/>
  </LinearLayout>
</ScrollView>