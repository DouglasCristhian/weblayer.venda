<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MaterialTheme" parent="ParentMaterialTheme">

  </style>


  <style name="ParentMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!--Tema pai para todos devices (Pre ou pro Lollipop-->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

  </style>

  <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:textColorPrimary">@android:color/black</item>
    <!--Textcolor do título da toolbar-->
    <item name="android:textColorSecondary">@android:color/black</item>
    <!--Color do Overflow Menu (Os três pontinhos)-->
  </style>

  <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:textColorPrimary">@android:color/black</item> <!-- Text Color dos items do Overflow menu-->

  </style>

  <style name="btnFinalizado" parent="Theme.AppCompat.Light">
    <item name="colorButtonNormal">@color/Finalizado</item>
    <item name="android:textColor">#FFFFFF</item>
  </style>

  <style name="btnFaturado" parent="Theme.AppCompat.Light">
    <item name="colorButtonNormal">@color/Faturado</item>
    <item name="android:textColor">#FFFFFF</item>
  </style>

  <style name="btnEntregue" parent="Theme.AppCompat.Light">
    <item name="colorButtonNormal">@color/Entregue</item>
    <item name="android:textColor">#FFFFFF</item>
  </style>

</resources>